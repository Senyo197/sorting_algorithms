#include "sort.h"

/**
*insertion_sort_list - Sort a doubly linked list in ascending order using
*insertion sort algorythm
*@list: A pointer to pointer to the head of list
*/
void insertion_sort_list(listint_t **list)
{
	listint_t *temp, *current;

	while (list == NULL || *list == NULL || (*list)->next)
		return;

	current = (*list)->next;

	while (current)
	{
		temp = current->next;

		while (current->prev && current->n < current->previous->n)
		{
			current->previous->next = current->next;

			if (current->next)
				current->next->previous = current->previous;

			current->next = current->previous;
			current->previous = current->previous->next;
			current->next->previous = current;

			if (current->previous)
				current->previous->next = current;
			else
				*list = current;

			print_list(*list);
		}

		current = temp;
	}
}
